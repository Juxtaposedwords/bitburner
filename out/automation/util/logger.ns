// logger listens to port 1 and logs all values received.
export async function main(ns) {
    ns.disableLog('ALL')
    const h = ns.getPortHandle(1);
    while (true) {
        if (h.empty()) {
            await ns.sleep(100);
            continue;
        }
        const v = await ns.readPort(1);
        ns.print(v);
        await ns.write('log.txt', v)
    }
}